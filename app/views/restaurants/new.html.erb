<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <h2>Add a new restaurant</h2>
      <%= simple_form_for @restaurant do |f| %>
        <%= f.input :name %>
        <%= f.input :category %>
        <%= f.input :address %>
        <%= f.input :phone_number%>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

