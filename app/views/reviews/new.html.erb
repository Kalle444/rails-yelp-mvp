<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <h2>Add a review</h2>
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content,  label: "Review" %>
        <%= f.input :rating %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
